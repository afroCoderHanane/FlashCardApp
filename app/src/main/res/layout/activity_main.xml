<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView

        android:id="@+id/flashcard_question"
        android:layout_width="match_parent"
        android:layout_height="200dp"

        android:text="who is the first president of the US?"
        android:textSize="40sp"
        android:gravity="center"

        android:background="@drawable/card_background"
        android:elevation="5dp"

        android:layout_marginTop="20dp"
        />

    <TextView
        android:id="@+id/flashcard_answer"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:text="George Washington"
        android:textSize="40sp"
        android:gravity="center"
        android:visibility="invisible"
        android:background="#4CAF50"
        />

    <TextView
        android:id="@+id/answer1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/flashcard_question"
        android:layout_marginTop="20sp"
        android:background="#D5E3EA"
        android:gravity="center"
        android:text="Barack Obama"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/answer2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/answer1"
        android:layout_marginTop="20sp"
        android:background="#D5E3EA"
        android:gravity="center"
        android:text="Donald Trump"
        android:textSize="30sp" />
    <TextView
        android:id="@+id/answer3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="George Washington"
        android:gravity="center"
        android:textSize="30sp"
        android:layout_below="@+id/answer2"
        android:layout_marginTop="20sp"
        android:background="#D5E3EA"
        />

</RelativeLayout>
